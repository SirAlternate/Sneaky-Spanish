{
	"manifest_version": 2,

	"name": "Sneaky Spanish",
	"description":"temp",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
    "tabs", "<all_urls>", "storage"
	],
  "background": {
    "scripts": ["js/eventPage.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "js/dictionary.json"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"],
      "js": [ "js/content.js",
              "js/findAndReplaceDOMText.js",
              "js/jquery-1.10.2.js",
              "js/bootstrap.min.js"],
      "css": ["css/popover.css"],
      "run_at": "document_end"
    }
  ]
}